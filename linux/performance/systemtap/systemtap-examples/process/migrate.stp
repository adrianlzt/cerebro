probe kernel.function("__migrate_task")
{
  comm = kernel_string($p->comm);
  if (comm == @1) {
    printf ("thread %d (%s) is migrating from %d to %d \n",
            $p->pid, comm, $src_cpu, $dest_cpu);
  }
}
